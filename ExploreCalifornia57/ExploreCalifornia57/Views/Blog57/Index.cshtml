@model IEnumerable<ExploreCalifornia57.Models.Post>
@{
    Layout = "_Layout";
}

<h1>Explorer's Blog</h1>

<p>
    Below are a few of the latest posts from some of our explorers.
</p>

<div class="blog-posts">
    @foreach (var post in Model)
    {
        <article class="blog-post">
            <h1>@post.Title57</h1>
            <div class="details">
                Posted <span>@post.Posted57</span> by <span>@post.Author57</span>
            </div>
            <div class="content">
                @post.Body57
            </div>
        </article>
    }
</div>

